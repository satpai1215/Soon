
<div id ="new-countdown-form">
	<h2>When Will I See You?</h2>
	<div id = "edit_container">
		<div id = "edit_header">Edit Countdown</div>
		<%= render 'form' %>
	</div>
	
	<%= link_to 'go back', countdown_path(@countdown_page), class: "action_link" %>
</div>




<script>
	$('#countdown_page_datepicker').datepicker();
	$('#countdown_page_timepicker').timepicker({
		'minTime' : '9:00am',
		'step' : 15,
		'scrollDefaultTime' : '8:00pm',
		'timeFormat': 'h:ia',
		'disableTextInput' : true
	});

</script>